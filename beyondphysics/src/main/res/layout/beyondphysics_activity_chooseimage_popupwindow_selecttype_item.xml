<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.beyondphysics.ui.views.NetworkImageView
            android:id="@+id/networkImageViewThumbnail"
            android:layout_width="@dimen/beyondPhysics_activity_chooseimage_popupwindow_selecttype_item_thumbnail_width"
            android:layout_height="@dimen/beyondPhysics_activity_chooseimage_popupwindow_selecttype_item_thumbnail_width"
            android:layout_margin="@dimen/beyondPhysics_view_normal_margin_narrow"
            android:scaleType="centerCrop"
            android:src="@mipmap/beyondphysics_activity_chooseimage_default_loading" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewFolderName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="@dimen/beyondPhysics_textView_normal_textSize_broad"
                tools:text="全部图片"
                />

            <TextView
                android:id="@+id/textViewCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/beyondPhysics_view_normal_margin_narrow"
                android:singleLine="true"
                android:textColor="#d2d2d7"
                android:textSize="@dimen/beyondPhysics_textView_normal_textSize_default"
                tools:text="共0张"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/beyondPhysics_view_normal_margin_narrow"
            android:layout_marginRight="@dimen/beyondPhysics_view_normal_margin_narrow"
            android:src="@mipmap/beyondphysics_activity_chooseimage_select" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/beyondPhysics_line_normal_widthOrheight_narrow"
        android:layout_below="@+id/linearLayout"
        android:background="#dcdcdc" />

</RelativeLayout>
